extends ../layouts/common
block nav
  include ../layouts/nav
block content
  h3 Login
  a(href='/') Home
  if errors
    each error in errors
      .alert.alert-danger= error
  form(method='POST')
    .form-group.row
      label.col-sm-2.col-form-label Email
      .col-sm-10
        input.form-control(type='email', name='email',required,value = values ? values.email : "")
    .form-group.row
      label.col-sm-2.col-form-label Password
      .col-sm-10
        input.form-control(type='password', name='password',required,value = values ? values.password : "")
    button.btn.btn-primary Login