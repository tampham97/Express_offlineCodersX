extends ../layouts/common
block nav
  include ../layouts/nav
block content
  a(href='/books') Back
  h3.py-3 Add new Book  
  form(action='/books/create', method='POST',enctype='multipart/form-data')
    .form-group.row
      label.col-sm-2.col-form-label Title
      .col-sm-10
        input.form-control(type='text', name='title')
    .form-group.row
      label.col-sm-2.col-form-label Description
      .col-sm-10
        input.form-control(type='text', name='desc')
    .form-group.row
      label.col-sm-2.col-form-label Book Cover
      .col-sm-10
        input(type='file', name='coverUrl')
    button.btn.btn-primary Create
