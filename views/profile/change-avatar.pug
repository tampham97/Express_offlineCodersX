extends ../layouts/common
block nav
  include ../layouts/nav
block content
  a(href='/profile') Back
  h3.pb-3 Avatar
  .d-flex.justify-content-center.pb-3
    img.rounded-circle(src=avatarUrl, width ='250px')
  form(action='/profile/avatar', enctype="multipart/form-data", method='POST')
    .form-group.row
      label.col-sm-3.col-form-label Change Avatar:
      .col-sm-6.pb-sm-3
        input#myFile(type='file', name='avatarUrl')
    button.btn.btn-primary.px-5 Update
   
